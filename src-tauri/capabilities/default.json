{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Main window capabilities",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:default",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "binaries/defradb",
          "sidecar": true,
          "args": true
        }
      ]
    },
    "shell:allow-open",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://localhost:9181/api/v0/graphql",
          "method": "POST"
        }
      ]
    }
  ]
}
